<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="cart"
            type="com.meivaldi.youlanda.data.database.cart.Cart" />

        <import type="com.meivaldi.youlanda.utilities.DataBindingUtils" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="@{cart.product.nama}"
            android:textSize="18dp"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@{DataBindingUtils.stringConverter(cart.quantity)}"
            android:textSize="18dp"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="@{DataBindingUtils.convert(cart.product.harga)}"
            android:textSize="18dp"
            android:textColor="@android:color/black" />

    </RelativeLayout>
</layout>