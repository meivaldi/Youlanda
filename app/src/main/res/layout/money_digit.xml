<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="order"
            type="com.meivaldi.youlanda.data.database.order.Order" />

        <variable
            name="handlers"
            type="com.meivaldi.youlanda.utilities.MyClickHandler" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="50"
                android:layout_marginRight="8dp"
                android:background="@color/colorPrimary"
                android:text="Uang Pas"
                android:textSize="32dp"
                android:textColor="@android:color/white"
                android:onClick="@{() -> handlers.getMoney(order)}"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="50"
                android:layout_marginLeft="8dp"
                android:background="@color/colorPrimary"
                android:text="Rp. 20.000,-"
                android:textSize="32dp"
                android:textColor="@android:color/white"
                android:onClick="@{() -> handlers.setMoney(order, 20000)}"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="50"
                android:layout_marginRight="8dp"
                android:background="@color/colorPrimary"
                android:text="Rp. 50.000,-"
                android:textSize="32dp"
                android:textColor="@android:color/white"
                android:onClick="@{() -> handlers.setMoney(order, 50000)}" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="50"
                android:layout_marginLeft="8dp"
                android:background="@color/colorPrimary"
                android:text="Rp. 100.000,-"
                android:textSize="32dp"
                android:textColor="@android:color/white"
                android:onClick="@{() -> handlers.setMoney(order, 100000)}"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="50"
                android:layout_marginRight="8dp"
                android:background="@color/colorPrimary"
                android:text="Rp. 200.000,-"
                android:textSize="32dp"
                android:textColor="@android:color/white"
                android:onClick="@{() -> handlers.setMoney(order, 200000)}"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="50"
                android:layout_marginLeft="8dp"
                android:background="@color/colorPrimary"
                android:text="Rp. 300.000,-"
                android:textSize="32dp"
                android:textColor="@android:color/white"
                android:onClick="@{() -> handlers.setMoney(order, 300000)}"/>

        </LinearLayout>

    </LinearLayout>
</layout>