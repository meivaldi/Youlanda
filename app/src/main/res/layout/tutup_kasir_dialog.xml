<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="handlers"
            type="com.meivaldi.youlanda.utilities.CashierHandler" />

        <import type="com.meivaldi.youlanda.utilities.DataBindingUtils" />

    </data>

    <RelativeLayout
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/black"
            android:textSize="27dp"
            android:textStyle="bold"
            android:text="Tutup Kasir" />

        <View
            android:id="@+id/separator"
            android:layout_below="@+id/label"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="3dp"
            android:background="#ccc" />

        <RelativeLayout
            android:id="@+id/starterBox"
            android:layout_below="@id/separator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:text="Modal Awal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:text="@{DataBindingUtils.starterModal(handlers.context)}" />

        </RelativeLayout>

        <View
            android:id="@+id/separator2"
            android:layout_below="@+id/starterBox"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="3dp"
            android:background="#ccc" />

        <RelativeLayout
            android:id="@+id/transactionBox"
            android:layout_below="@id/separator2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:text="Total Transaksi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:text="@{DataBindingUtils.getTransactions(handlers.context)}" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/productBox"
            android:layout_below="@id/transactionBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:text="Total Produk Terjual" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:text="@{DataBindingUtils.getProducts(handlers.context)}" />

        </RelativeLayout>

        <View
            android:id="@+id/separator3"
            android:layout_below="@+id/productBox"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="3dp"
            android:background="#ccc" />

        <RelativeLayout
            android:id="@+id/finalModal"
            android:layout_below="@id/separator3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:text="Modal Akhir" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textSize="32dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:text="@{DataBindingUtils.finalModal(handlers.context)}" />

        </RelativeLayout>

        <Button
            android:layout_below="@id/finalModal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:text="Tutup Kasir"
            android:onClick="@{handlers::closeCashier}"/>

    </RelativeLayout>
</layout>